--// Shinra Hub Free

--// Serviços
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

--// Criando GUI
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "ShinraHubFree"
ScreenGui.ResetOnSpawn = false
ScreenGui.Parent = LocalPlayer:WaitForChild("PlayerGui")

local Frame = Instance.new("Frame")
Frame.Size = UDim2.new(0, 200, 0, 160) -- altura ajustada para os botões + Owner
Frame.Position = UDim2.new(0.05, 0, 0.3, 0)
Frame.BackgroundColor3 = Color3.fromHex("#ac2b31")
Frame.BackgroundTransparency = 0.3
Frame.Active = true
Frame.Draggable = true
Frame.Parent = ScreenGui

-- Bordas arredondadas no Frame
local frameCorner = Instance.new("UICorner")
frameCorner.CornerRadius = UDim.new(0, 12)
frameCorner.Parent = Frame

-- Borda colorida (UIStroke)
local frameStroke = Instance.new("UIStroke")
frameStroke.Thickness = 3
frameStroke.Color = Color3.fromHex("#d31821")
frameStroke.Parent = Frame

-- Título (Roboto)
local titulo = Instance.new("TextLabel")
titulo.Size = UDim2.new(1, 0, 0, 30)
titulo.BackgroundTransparency = 1
titulo.Text = "Shinra Hub Free"
titulo.TextColor3 = Color3.fromRGB(255, 255, 255)
titulo.Font = Enum.Font.Roboto
titulo.TextSize = 18
titulo.Parent = Frame

-- Função para criar botões
local function criarBotao(nome, posY)
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(1, -10, 0, 30)
    button.Position = UDim2.new(0, 5, 0, posY)
    button.Text = nome
    button.BackgroundColor3 = Color3.fromHex("#e65c5c")
    button.BackgroundTransparency = 0
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.Font = Enum.Font.Roboto
    button.TextSize = 14
    button.Parent = Frame

    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 8)
    corner.Parent = button

    return button
end

-- Criando botões
local btnSubir = criarBotao("Subir Chão", 35)
local btnParar = criarBotao("Parar Chão", 70)
local btnReset = criarBotao("Resetar Chão", 105)

-- Variáveis de controle
local chao = nil
local rodando = false
local tamanhoChao = 10

-- Funções para o chão
local function subirChao()
    if not LocalPlayer.Character or not LocalPlayer.Character:FindFirstChild("HumanoidRootPart") then return end
    if not chao then
        local hrp = LocalPlayer.Character.HumanoidRootPart
        local frente = hrp.CFrame.LookVector * 3
        local posInicial = hrp.Position + frente - Vector3.new(0, hrp.Size.Y/2 + 0.5, 0)

        chao = Instance.new("Part")
        chao.Name = "ChaoVermelho"
        chao.Size = Vector3.new(tamanhoChao, 1, tamanhoChao)
        chao.Anchored = true
        chao.CFrame = CFrame.new(posInicial)
        chao.Color = Color3.fromHex("#d31821")
        chao.Parent = workspace
    end

    rodando = true
    task.spawn(function()
        local velocidade = 0.5 -- início mais rápido
        while rodando and chao do
            chao.Position = chao.Position + Vector3.new(0, velocidade, 0)
            velocidade = math.clamp(velocidade - 0.01, 0.1, 0.5) -- desaceleração gradual
            task.wait(0.05)
        end
    end)
end

local function pararChao()
    rodando = false
end

local function resetChao()
    rodando = false
    if chao then
        chao:Destroy()
        chao = nil
    end
end

-- Eventos dos botões
btnSubir.MouseButton1Click:Connect(subirChao)
btnParar.MouseButton1Click:Connect(pararChao)
btnReset.MouseButton1Click:Connect(resetChao)

--// Seção Owner restaurada original
local ownerLabel = Instance.new("TextLabel")
ownerLabel.Size = UDim2.new(1, -10, 0, 20)
ownerLabel.Position = UDim2.new(0, 5, 0, 140)
ownerLabel.BackgroundTransparency = 1
ownerLabel.Text = "Owner: shaR1zard"
ownerLabel.Font = Enum.Font.Roboto
ownerLabel.TextSize = 14
ownerLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
ownerLabel.TextXAlignment = Enum.TextXAlignment.Left
ownerLabel.Parent = Frame

-- Efeito RGB para o nome "shaR1zard"
local function rgbEffect(label)
    task.spawn(function()
        while true do
            for i = 0, 360, 5 do
                local hue = i/360
                -- mantém "Owner:" branco e "shaR1zard" RGB
                label.TextColor3 = Color3.fromHSV(hue,1,1)
                task.wait(0.03)
            end
        end
    end)
end

rgbEffect(ownerLabel)
